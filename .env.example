# Application settings
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# MongoDB connection string
MONGO_URI=mongodb://localhost:27017/instagram-bot

# JWT Secret for API authentication (if implemented)
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=7d

# Instagram login credentials (optional in .env, recommended to use database)
INSTAGRAM_USERNAME=your_username
INSTAGRAM_PASSWORD=your_password

# Bot settings
BOT_ACTIVE=true
BOT_START_HOUR=5  # تقریبا معادل 9 صبح ایران
BOT_END_HOUR=19   # تقریبا معادل 10 شب ایران

DISABLE_INSTAGRAM=false
